<mujoco model="quadruped">
    <compiler angle="radian"/>

    <option gravity="0 0 -981"/>

    <asset>
        <mesh name="body_mesh"     file="../models/body.STL"/>
        <mesh name="shoulder_mesh" file="../models/shoulder.STL"/>
        <mesh name="thigh_mesh"    file="../models/thigh.STL"/>
        <mesh name="foot_mesh"     file="../models/foot.STL"/>

        <texture name="texgrid" type="2d" builtin="checker"
                 rgb1="0.2 0.2 0.2" rgb2="0.85 0.85 0.85"
                 width="512" height="512"/>
        <material name="grid" texture="texgrid" texrepeat="10 10" reflectance="0.2"/>
    </asset>

    <!-- Defaults for repeated values -->
    <default>
        <!-- Joint defaults -->
        <default class="shoulder_joint">
            <joint type="hinge" axis="0 0 1" pos="20.25 -15 0"
                   limited="true" range="-1.57079632679 1.57079632679"/>
        </default>
        <default class="wing_joint">
            <joint type="hinge" axis="1 0 0" pos="0 -2.5 34.5"
                   limited="true" range="-0.872664625997 0.872664625997"/>
        </default>
        <default class="knee_joint">
            <joint type="hinge" axis="1 0 0" pos="0 -12 110"
                   limited="true" range="-2.00712863979 1.57079632679"/>
        </default>

        <!-- Geom defaults for mesh rotations -->
        <default class="mesh_geom">
            <geom type="mesh" quat="0.7071068 0.7071068 0 0"/>
        </default>

        <!-- Site defaults -->
        <default class="foot_site">
            <site pos="21 -12 0" size="1"/>
        </default>
        <default class="target_site">
            <site pos="0 0 0" size="5" rgba="1 0.5 0 1"/>
        </default>

        <!-- Actuator defaults -->
        <default class="shoulder_actuator">
            <position kp="80" ctrlrange="-1.57079632679 1.57079632679"/>
        </default>
        <default class="wing_actuator">
            <position kp="60" ctrlrange="-0.872664625997 0.872664625997"/>
        </default>
        <default class="knee_actuator">
            <position kp="80" ctrlrange="-0.872664625997 1.3962634016"/>
        </default>
    </default>

    <worldbody>
        <geom name="ground" type="plane" size="1000 1000 0.1" material="grid" rgba="1 1 1 1"/>

        <site name="world_x" type="capsule" fromto="0 0 0  3 0 0" size="0.05" rgba="1 0 0 1"/>
        <site name="world_y" type="capsule" fromto="0 0 0  0 3 0" size="0.05" rgba="0 1 0 1"/>
        <site name="world_z" type="capsule" fromto="0 0 0  0 0 3" size="0.05" rgba="0 0 1 1"/>

        <body name="stage" pos="0 0 133.35">
            

            <body name="body" pos="-100 100 -61.4"> //-21.4 is default
                <geom class="mesh_geom" mesh="body_mesh"/>
                
                <!-- FRONT LEFT LEG (FL) -->
                <body name="shoulder_FL" pos="120.25 -28 0" quat="0 0 0 1">
                    <joint name="shoulder_joint_FL" class="shoulder_joint"/>
                    <geom class="mesh_geom" mesh="shoulder_mesh"/>

                    <body name="thigh_FL" pos="0 -35.75 -13.1">
                        <joint name="wing_joint_FL" class="wing_joint"/>
                        <geom class="mesh_geom" mesh="thigh_mesh"/>

                        <body name="foot_FL" pos="0 -98 -98.75">
                            <joint name="knee_joint_FL" class="knee_joint"/>
                            <geom class="mesh_geom" mesh="foot_mesh"/>

                            <site name="foot_site_FL" class="foot_site" rgba="1 0 0 1"/>
                        </body>
                    </body>
                </body>

                <!-- FRONT RIGHT LEG (FR) -->
                <body name="shoulder_FR" pos="172 -120.25 0" quat="0.7071068 0 0 0.7071068">
                    <joint name="shoulder_joint_FR" class="shoulder_joint"/>
                    <geom class="mesh_geom" mesh="shoulder_mesh"/>

                    <body name="thigh_FR" pos="0 -35.75 -13.1">
                        <joint name="wing_joint_FR" class="wing_joint"/>
                        <geom class="mesh_geom" mesh="thigh_mesh"/>

                        <body name="foot_FR" pos="0 -98 -98.75">
                            <joint name="knee_joint_FR" class="knee_joint"/>
                            <geom class="mesh_geom" mesh="foot_mesh"/>

                            <site name="foot_site_FR" class="foot_site" rgba="0 1 0 1"/>
                        </body>
                    </body>
                </body>

                <!-- BACK LEFT LEG (BL) -->
                <body name="shoulder_BL" pos="28 -79.75 0" quat="-0.7071068  0 0 0.7071068">
                    <joint name="shoulder_joint_BL" class="shoulder_joint"/>
                    <geom class="mesh_geom" mesh="shoulder_mesh"/>

                    <body name="thigh_BL" pos="0 -35.75 -13.1">
                        <joint name="wing_joint_BL" class="wing_joint"/>
                        <geom class="mesh_geom" mesh="thigh_mesh"/>

                        <body name="foot_BL" pos="0 -98 -98.75">
                            <joint name="knee_joint_BL" class="knee_joint"/>
                            <geom class="mesh_geom" mesh="foot_mesh"/>

                            <site name="foot_site_BL" class="foot_site" rgba="0 0 1 1"/>
                        </body>
                    </body>
                </body>

                <!-- BACK RIGHT LEG (BR) -->
                <body name="shoulder_BR" pos="79.75 -172 0" quat="1 0 0 0">
                    <joint name="shoulder_joint_BR" class="shoulder_joint"/>
                    <geom class="mesh_geom" mesh="shoulder_mesh"/>

                    <body name="thigh_BR" pos="0 -35.75 -13.1">
                        <joint name="wing_joint_BR" class="wing_joint"/>
                        <geom class="mesh_geom" mesh="thigh_mesh"/>

                        <body name="foot_BR" pos="0 -98 -98.75">
                            <joint name="knee_joint_BR" class="knee_joint"/>
                            <geom class="mesh_geom" mesh="foot_mesh"/>

                            <site name="foot_site_BR" class="foot_site" rgba="1 1 0 1"/>
                        </body>
                    </body>
                </body>

            </body>

        </body>

        <!-- IK targets for each leg -->
        <body name="ik_target_FL" mocap="true" pos="-0.75 217.75 0.1">
            <site name="target_site_FL" class="target_site"/>
        </body>
        <!-- Front Right leg IK target -->
        <body name="ik_target_FR" mocap="true" pos="217.75 0.75 0.1">
            <site name="target_site_FR" class="target_site"/>
        </body>
        <body name="ik_target_BL" mocap="true" pos="-217.75 -0.75 0.1">
            <site name="target_site_BL" class="target_site"/>
        </body>
        <body name="ik_target_BR" mocap="true" pos="0.75 -217.75 0.1">
            <site name="target_site_BR" class="target_site"/>
        </body>
    </worldbody>

    <actuator>
        <!-- Front Left Leg Actuators -->
        <position name="shoulder_actuator_FL" joint="shoulder_joint_FL" class="shoulder_actuator"/>
        <position name="wing_actuator_FL" joint="wing_joint_FL" class="wing_actuator"/>
        <position name="knee_actuator_FL" joint="knee_joint_FL" class="knee_actuator"/>

        <!-- Front Right Leg Actuators -->
        <position name="shoulder_actuator_FR" joint="shoulder_joint_FR" class="shoulder_actuator"/>
        <position name="wing_actuator_FR" joint="wing_joint_FR" class="wing_actuator"/>
        <position name="knee_actuator_FR" joint="knee_joint_FR" class="knee_actuator"/>

        <!-- Back Left Leg Actuators -->
        <position name="shoulder_actuator_BL" joint="shoulder_joint_BL" class="shoulder_actuator"/>
        <position name="wing_actuator_BL" joint="wing_joint_BL" class="wing_actuator"/>
        <position name="knee_actuator_BL" joint="knee_joint_BL" class="knee_actuator"/>

        <!-- Back Right Leg Actuators -->
        <position name="shoulder_actuator_BR" joint="shoulder_joint_BR" class="shoulder_actuator"/>
        <position name="wing_actuator_BR" joint="wing_joint_BR" class="wing_actuator"/>
        <position name="knee_actuator_BR" joint="knee_joint_BR" class="knee_actuator"/>
    </actuator>
</mujoco>

